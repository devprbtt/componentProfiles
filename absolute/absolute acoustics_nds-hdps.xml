<?xml version="1.0" encoding="UTF-8"?>
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="racepoint_component_profile.xsd" manufacturer="Absolute" model="NDS-HDPS" alias="Absolute Nexos HDMI Problem Solver, NDS-HDPS" device_class="Media_converter" minimum_component_engine_version="0" rpm_xml_version="$Revision: 1.0 $">

    <notes>
        This product is a HDMI Problem Solver. Compatible with all Absolute HDMI devices.
    </notes>

    <component_properties>
        <always_on_allowed>false</always_on_allowed>
    </component_properties>
    
    <media_interfaces>
        <input name_on_component="HDMI In">
            <combined_media>
                <audio_media type="hdmi_audio"/>
                <video_media type="hdmi"/>
            </combined_media>
            <resource resource_type="AV_AUDIOSWITCH_FUNCTION"/>
            <resource resource_type="AV_VIDEOSWITCH_FUNCTION"/>
        </input>
        <output name_on_component="HDMI Out">
            <combined_media>
                <audio_media type="hdmi_audio"/>
                <video_media type="hdmi"/>
            </combined_media>
        </output>
    </media_interfaces>
    
    <logical_component logical_component_name="Media_converter">
        <implementation>
            <input name_on_component="HDMI In"/>
            <output name_on_component="HDMI Out"/>
        </implementation>
    </logical_component>
</component>